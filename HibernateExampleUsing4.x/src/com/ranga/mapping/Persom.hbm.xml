<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.ranga.pojo.Person" table="Persons">
		<id name="personId" column="personId" type="java.lang.Long">
			<generator class="native">
			</generator>
		</id>
		<property name="personName" type="java.lang.String"></property>
		<property name="age" type="java.lang.Integer"></property>		
	</class>
</hibernate-mapping>